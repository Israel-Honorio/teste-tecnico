generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Membros {
  id          Int      @id @default(autoincrement())
  nome        String
  email       String   @unique
  profissao   String
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt @default(now())

  @@map("membros")
  Posts Posts[]
}

model Posts{
  id          Int      @id @default(autoincrement())
  titulo      String
  texto       String
  autorId     Int
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt @default(now())

  autor       Membros  @relation(fields: [autorId], references: [id])

  @@map("posts")
}